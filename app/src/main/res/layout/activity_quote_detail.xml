<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Home_.quotes.QuoteDetail_.QuoteDetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout2"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:backgroundTint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:padding="13.5dp"
                        android:tint="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/back_btn"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_title_" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <ImageView
                android:id="@+id/quote_preview_IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#50ffffff"
                    android:clickable="true"
                    android:focusable="true">

                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@+id/fab_share"
                    app:layout_constraintEnd_toEndOf="@+id/fab_share"
                    app:layout_constraintStart_toStartOf="@+id/fab_share"
                    app:srcCompat="@drawable/ic_copy"
                    app:tint="@color/colorPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/FabOption_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_quote"
                    app:tint="@color/colorPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_hashtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@+id/fab_copy"
                    app:layout_constraintEnd_toEndOf="@+id/fab_copy"
                    app:layout_constraintStart_toStartOf="@+id/fab_copy"
                    app:srcCompat="@drawable/ic_hashtag"
                    app:tint="@color/colorPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@+id/FabOption_btn"
                    app:layout_constraintEnd_toEndOf="@+id/FabOption_btn"
                    app:layout_constraintStart_toStartOf="@+id/FabOption_btn"
                    app:srcCompat="@drawable/ic_baseline_save_alt_24"
                    app:tint="@color/colorPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@+id/fab_hashtag"
                    app:layout_constraintEnd_toEndOf="@+id/fab_hashtag"
                    app:layout_constraintStart_toStartOf="@+id/fab_hashtag"
                    app:srcCompat="@drawable/ic_baseline_bookmark_border_24"
                    app:tint="@color/colorPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:layout_constraintBottom_toTopOf="@+id/fab_save_btn"
                    app:layout_constraintEnd_toEndOf="@+id/fab_save_btn"
                    app:layout_constraintStart_toStartOf="@+id/fab_save_btn"
                    app:srcCompat="@drawable/ic_baseline_share_24"
                    app:tint="@color/colorPrimary" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>